{
  "name": "lit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint **/*.{js,ts} --fix --quiet",
    "lint:stylelint": "stylelint \"*/**/*.{css,js,ts}\"",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.19.0",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-typescript": "^0.14.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss-lit": "^1.2.0",
    "stylelint": "^16.14.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.5"
  },
  "lint-staged": {
    "*/**/*.{js,ts}": [
      "eslint --fix"
    ],
    "*/**/*.{css,js,ts}": [
      "stylelint"
    ]
  }
}
