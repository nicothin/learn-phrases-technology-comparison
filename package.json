{
  "name": "lit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint **/*.{js,ts} --fix --quiet",
    "lint:stylelint": "stylelint \"*/**/*.css\"",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "stylelint": "^16.14.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.5"
  },
  "lint-staged": {
    "*/**/*.{js,ts}": [
      "eslint --fix"
    ],
    "*/**/*.css": [
      "stylelint"
    ]
  }
}
